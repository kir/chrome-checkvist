{
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "favicon.png",
    "default_title": "View Checkvist Lists",
    "default_popup": "popout.html"
  },
  "description": "Quickly check your Checkvist without leaving the page, or open Checkvist in Firefox sidebar",
  "icons": {
    "129": "favicon.png"
  },
  "name": "Checkvist",

  "sidebar_action": {
    "default_title": "Checkvist",
    "default_panel": "sidebar.html",
    "default_icon": "favicon.png"
  },
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      }
    }
  },
  "permissions": [
  ],
  "version": "1.0.9"
}
